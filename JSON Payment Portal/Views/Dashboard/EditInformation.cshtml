                            <div class="form-group" style="padding-left: 5px">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" aria-describedby="name" placeholder="Enter Name">
                                <small class="form-text text-muted">Enter both your first and last name</small>
                            </div>
                            @*-----Phone number Field----*@
                            <div class="form-group" style="padding-left: 5px">
                                <label for="phoneNumber">Phone</label>
                                <input type="tel" class="form-control" placeholder="0000000000">
                            </div>
                            @*-----Address 1 Field----*@
                            <div class="form-group" style="padding-left: 5px">
                                <label for="Address1">Address 1</label>
                                <input type="text" class="form-control" aria-describedby="address1" placeholder="Enter Your Address">
